<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/backButton"
            android:background="@drawable/back_button"
            android:layout_height="50dp"
            android:layout_width="50dp" />
        <TextView
            android:id="@+id/tvInformationTitle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="잃어버린 것을 찾아서"
            android:textColor="#000000"
            android:textSize="@dimen/information_title_font_size" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_marginBottom="16dp"
                android:id="@+id/cardview"
                card:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="250dp"
                        android:src="@drawable/product_list_1"
                        android:id="@+id/image"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#ffffff"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="@dimen/information_middle_title_font_size"
                            android:text="잃어버린 것을 찾아서"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content" />
                        <ImageView
                            android:id="@+id/tvDivider"
                            android:layout_height="wrap_content"
                            android:src="@drawable/contents_divider"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content" />
                        <TextView
                            android:id="@+id/tvType"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="@dimen/information_normal_font_size"
                            android:layout_marginBottom="5dp"
                            android:text="역사, 추리, 스릴러"
                            android:layout_width="wrap_content" />
                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="@dimen/information_normal_font_size"
                            android:layout_marginBottom="5dp"
                            android:text="약 4시간 소요"
                            android:layout_width="wrap_content" />
                        <TextView
                            android:id="@+id/tvDistance"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="@dimen/information_normal_font_size"
                            android:layout_marginBottom="5dp"
                            android:text="총 이동거리 8km"
                            android:layout_width="wrap_content" />
                        <TextView
                            android:id="@+id/tvAccmulate"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="@dimen/information_normal_font_size"
                            android:text="누적 100,812명"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content" />
                        <Button
                            android:id="@+id/btnBuy"
                            android:layout_height="28dp"
                            android:textColor="#ffffff"
                            android:background="#ff0000"
                            android:textSize="@dimen/information_normal_font_size"
                            android:layout_marginLeft="5dp"
                            android:text="구매하기"
                            android:layout_width="100dp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:text="줄거리"
                android:textSize="@dimen/information_middle_title_font_size"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/tvProductInformationContents"
                android:text="어느날 국정원 직원이 김교수에게 찾아와 막혀있는 아시아 정세를 풀기 위해 보물을 찾아야 한다며 지령을 전달한다.  삼국의 외교단과 약속한 시간까지 앞으로 단 4시간, 삼국의 마음을 잃지 않으려면 반드시 4시간 안에 보물을 찾아야만 하는데.."
                android:textSize="@dimen/information_normal_font_size"
                android:textColor="#000000"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:text="세부정보"
                android:textSize="@dimen/information_middle_title_font_size"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:text="가격"
                    android:textSize="@dimen/information_normal_font_size"
                    android:textColor="#000000"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="무료"
                    android:textSize="@dimen/information_normal_font_size"
                    android:textColor="#ff0000"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:text="지역"
                    android:textSize="@dimen/information_normal_font_size"
                    android:textColor="#000000"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="대한민국 서울"
                    android:textSize="@dimen/information_normal_font_size"
                    android:textColor="#ff0000"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:text="장르"
                    android:textSize="@dimen/information_normal_font_size"
                    android:textColor="#000000"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="#역사 #추리 #스릴러"
                    android:textSize="@dimen/information_normal_font_size"
                    android:textColor="#ff0000"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:text="소요시간"
                    android:textSize="@dimen/information_normal_font_size"
                    android:textColor="#000000"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="약 4시간"
                    android:textSize="@dimen/information_normal_font_size"
                    android:textColor="#ff0000"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:text="추천 플레이시간"
                    android:textSize="@dimen/information_normal_font_size"
                    android:textColor="#000000"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="오후 3시 ~ 오후 7시"
                    android:textSize="@dimen/information_normal_font_size"
                    android:textColor="#ff0000"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:text="총 이동거리"
                    android:textSize="@dimen/information_normal_font_size"
                    android:textColor="#000000"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="약 8km"
                    android:textSize="@dimen/information_normal_font_size"
                    android:textColor="#ff0000"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:text="동영상"
                android:textSize="@dimen/information_middle_title_font_size"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="200dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/video_prepare_1"
                        android:id="@+id/video_prepare_1"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="1:58"
                        android:textSize="@dimen/information_middle_title_font_size"
                        android:textColor="#ffffff"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="#000000"
                        android:layout_alignRight="@+id/video_prepare_1"
                        android:layout_alignBottom="@+id/video_prepare_1"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#000000"
                        android:textSize="@dimen/information_normal_font_size"
                        android:text="예고편"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:textSize="@dimen/information_normal_font_size"
                        android:text="메인 예고편"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/right_direction"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:textColor="#aa000000"
                            android:textSize="@dimen/information_normal_font_size"
                            android:text="1,453"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="200dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/video_prepare_3"
                        android:id="@+id/video_prepare_3"
                        android:scaleType="fitXY"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="3:58"
                        android:textSize="@dimen/information_middle_title_font_size"
                        android:textColor="#ffffff"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="8dp"
                        android:background="#000000"
                        android:layout_alignRight="@+id/video_prepare_3"
                        android:layout_alignBottom="@+id/video_prepare_3"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#000000"
                        android:textSize="@dimen/information_normal_font_size"
                        android:text="메이킹 영상"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:textSize="@dimen/information_normal_font_size"
                        android:text="기사 박석민(장현성) 촬영분"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/right_direction"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:textColor="#aa000000"
                            android:textSize="@dimen/information_normal_font_size"
                            android:text="1,234"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:id="@+id/moreDetailsOfVideo"
                android:background="@null"
                android:textColor="#000000"
                android:textSize="@dimen/information_middle_title_font_size"
                android:text="더 보기>"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:text="평점/한줄평"
                android:textSize="@dimen/information_middle_title_font_size"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:textColor="#ff0000"
                android:text="★★★☆☆"
                android:textSize="@dimen/information_middle_title_font_size"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:text="너무너무너무 재밋음."
                android:textSize="@dimen/information_middle_title_font_size"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:textColor="#aa000000"
                android:text="guest | 2017-12-31"
                android:textSize="@dimen/information_middle_title_font_size"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
