<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/login_background">
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="언어 : 한국어(대한민국)"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="18sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-50dp"
        android:gravity="center_vertical|center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/login_ddac_text"
            android:layout_alignLeft="@+id/login_id"
            android:layout_alignRight="@+id/login_id"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/login_ddac_text"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <EditText
            android:id="@+id/login_id"
            android:layout_marginTop="15dp"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_below="@+id/login_ddac_text"
            android:layout_marginBottom="10dp"
            android:background="#ffffff"
            android:hint="아이디"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/login_passwd"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_below="@+id/login_id"
            android:layout_marginBottom="10dp"
            android:background="#ffffff"
            android:hint="비밀번호"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:textSize="20sp" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_below="@+id/login_passwd"
            android:background="#ffffff"
            android:gravity="center"
            android:text="로그인"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/findIdAndPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_button"
            android:background="@null"
            android:text="아이디 및 비밀번호 찾기"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_below="@+id/login_button"
            android:id="@+id/customText1"
            android:layout_toRightOf="@id/findIdAndPassword"
            android:background="@null"
            android:text="|"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_below="@+id/login_button"
            android:layout_toRightOf="@id/customText1"
            android:text="회원가입"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </RelativeLayout>
</LinearLayout>
