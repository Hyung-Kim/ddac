<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/backButton"
            android:background="@drawable/back_button"
            android:layout_height="50dp"
            android:layout_width="50dp" />
        <TextView
            android:id="@+id/tvInformationTitle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="누명"
            android:textColor="#000000"
            android:textSize="34sp" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_marginBottom="16dp"
                android:id="@+id/cardview"
                card:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="250dp"
                        android:src="@drawable/product_list_1"
                        android:id="@+id/image"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#ffffff"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="26sp"
                            android:text="누명"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content" />
                        <ImageView
                            android:id="@+id/tvDivider"
                            android:layout_height="wrap_content"
                            android:src="@drawable/contents_divider"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content" />
                        <TextView
                            android:id="@+id/tvType"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginBottom="5dp"
                            android:text="스릴러, 서스펜스, 반전"
                            android:layout_width="wrap_content" />
                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginBottom="5dp"
                            android:text="약 8시간 소요"
                            android:layout_width="wrap_content" />
                        <TextView
                            android:id="@+id/tvDistance"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginBottom="5dp"
                            android:text="총 이동거리 12.8km"
                            android:layout_width="wrap_content" />
                        <TextView
                            android:id="@+id/tvAccmulate"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:text="누적 4,812명"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content" />
                        <Button
                            android:id="@+id/btnBuy"
                            android:layout_height="28dp"
                            android:textColor="#ffffff"
                            android:background="#ff0000"
                            android:textSize="21sp"
                            android:layout_marginLeft="5dp"
                            android:text="구매하기"
                            android:layout_width="100dp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:text="줄거리"
                android:textSize="24sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/tvProductInformationContents"
                android:text="대기업 회장 딸의 살해 누명을 쓰고 25년형을 선고받은 운전기사 박석민. 가족도 돈도 없는 그는 어쩔 수 없이 억울하게 감옥생활을 하다 15년 후 갑자기 무죄를 입증할 자료가 있다며 변호사를 선임하게 되는데.."
                android:textSize="22sp"
                android:textColor="#000000"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:text="감독/출연"
                android:textSize="24sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:src="@drawable/actor1"
                    android:layout_height="200dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:layout_weight="7"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="박찬욱"
                        android:textSize="24sp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="감독"
                        android:textSize="24sp"
                        android:textColor="#ff0000"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:src="@drawable/actor2"
                    android:layout_height="200dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:layout_weight="7"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="박찬욱"
                        android:textSize="24sp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="감독"
                        android:textSize="24sp"
                        android:textColor="#ff0000"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:src="@drawable/actor3"
                    android:layout_height="200dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:layout_weight="7"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="박찬욱"
                        android:textSize="24sp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="감독"
                        android:textSize="24sp"
                        android:textColor="#ff0000"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:id="@+id/moreDetailsOfActor"
                android:background="@null"
                android:textColor="#000000"
                android:textSize="24sp"
                android:text="더 보기>"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:text="동영상"
                android:textSize="24sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="200dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/video_prepare_1"
                        android:id="@+id/video_prepare_1"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="1:58"
                        android:textSize="24sp"
                        android:textColor="#ffffff"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="8dp"
                        android:background="#000000"
                        android:layout_alignRight="@+id/video_prepare_1"
                        android:layout_alignBottom="@+id/video_prepare_1"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:text="예고편"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:text="누명 메인 예고편"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/right_direction"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:textColor="#aa000000"
                            android:textSize="18sp"
                            android:text="1,453"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="200dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/video_prepare_2"
                        android:id="@+id/video_prepare_2"

                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="2:58"
                        android:textSize="24sp"
                        android:textColor="#ffffff"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="8dp"
                        android:background="#000000"
                        android:layout_alignRight="@+id/video_prepare_2"
                        android:layout_alignBottom="@+id/video_prepare_2"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:text="티저 영상"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:text="누명 티저 영상"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/right_direction"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:textColor="#aa000000"
                            android:textSize="18sp"
                            android:text="1,234"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="200dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/video_prepare_3"
                        android:id="@+id/video_prepare_3"

                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="3:58"
                        android:textSize="24sp"
                        android:textColor="#ffffff"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="8dp"
                        android:background="#000000"
                        android:layout_alignRight="@+id/video_prepare_3"
                        android:layout_alignBottom="@+id/video_prepare_3"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:text="메이킹 영상"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:text="기사 박석민(장현성) 촬영분"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/right_direction"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:textColor="#aa000000"
                            android:textSize="18sp"
                            android:text="1,234"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:id="@+id/moreDetailsOfVideo"
                android:background="@null"
                android:textColor="#000000"
                android:textSize="24sp"
                android:text="더 보기>"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:text="평점/한줄평"
                android:textSize="24sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:textColor="#ff0000"
                android:text="★★★☆☆"
                android:textSize="26sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:text="너무너무너무 재밋음."
                android:textSize="24sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:textColor="#aa000000"
                android:text="guest | 2017-12-31"
                android:textSize="24sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
